   6 | export async function checkForBrokenLinks(page: Page, testInfo: TestInfo) {
   7 |     await test.step("Check For Broken Links", async () => {
   8 |         const baseURL = testInfo.project.use.baseURL;
   9 |
  10 |         const links = page.locator("a");
  11 |
  12 |         const allLinks = await Promise.all(await links.all()).then(links => {
  13 |             return links;
  14 |         });
  15 |
  16 |         const allLinksAndText = [];
  17 |         for (let i = 0; i < allLinks.length; i++) {
  18 |             let linkText = await allLinks[i].innerText()
  19 |             let linkHref = await allLinks[i].getAttribute("href");
  20 |             allLinksAndText.push({
  21 |                 innerText : linkText,
  22 |                 href : linkHref
  23 |             });
  24 |         };
  25 |
  26 |         const allValidHrefs = [];
  27 |         for (let i=0; i < allLinksAndText.length; i++) {
  28 |             let loopHref = allLinksAndText[i].href;
  29 |             let loopInnerText = allLinksAndText[i].innerText;
  30 |             if (loopInnerText.replaceAll(" ","").toUpperCase().includes("LOGOUT")) {
  31 |                 console.log(loopInnerText + " link was skipped because it's Logout functionality");
  32 |                 continue;
  33 |             };
  34 |             expect.soft(loopHref, `${loopInnerText} has a null href`).toBeTruthy();
  35 |             if (!loopHref) continue;
  36 |
  37 |             if (loopHref?.includes("tel:")) {
  38 |                 console.log(loopInnerText + " link was skipped because it's a phone number");
  39 |                 continue;
  40 |             }
  41 |
  42 |             if (loopHref.startsWith("mailto")) continue;
  43 |
  44 |             if (loopHref.charAt(0) === "/" || loopHref?.charAt(0) === "#") loopHref = baseURL + loopHref;
  45 |         
  46 |             //if (!loopHref?.includes(baseURL)) continue;
  47 |
  48 |             allValidHrefs.push({
  49 |                 innerText : loopInnerText,
  50 |                 href : loopHref
  51 |             });
  52 |         };
